<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomGPS.MainPage">

    <StackLayout Padding="20,20">
        <Label Text="Location: " FontSize="Title"></Label>
        
        <Label Text="Lon: 11111" FontSize="Large" Padding="20,10,0,10" x:Name="lblLon"></Label>
        <Label Text="Lat: 00000" FontSize="Large" Padding="20,0,0,60" x:Name="lblLat"></Label>
        
        <Label Text="Address: " FontSize="Title"></Label>
        <Label Text="1825 North Bluemound Drive" FontSize="Large" Padding="20,10,0,10" x:Name="lbladdress1"></Label>
        <Label Text="Appleton WI, 54914" FontSize="Large " Padding="20,0,0,60" x:Name="lbladdress2"></Label>
        
        <Button Text="Update Location" Clicked="UpdateLocation_OnClicked"></Button>
    </StackLayout>

</ContentPage>
